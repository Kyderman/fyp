<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :sport %>
    <h3>Members</h3>
    <div id="users_teams">
      <%= f.simple_fields_for :users_teams do |user| %>
        <%= render 'users_team_fields', f: user %>
      <%end%>
      <div class="links">
        <%= link_to_add_association 'Add Member', f, :users_teams, class: 'btn btn-success' %>
        </br>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
