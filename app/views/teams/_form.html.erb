<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Information</h3>
      </div>
      <div class="panel-body">
        <%= f.input :name %>
        <%= f.association :sport %>
        <%= f.button :submit, class: 'btn btn-success btn-block' %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Team Members</h3>
      </div>
      <div class="panel-body">
        <div id="users_teams">
          <%= f.simple_fields_for :users_teams do |user| %>
            <%= render 'users_team_fields', f: user %>
          <%end%>
          <div class="links">
            <%= link_to_add_association 'Add Member', f, :users_teams, class: 'btn btn-block btn-success' %>
            </br>
          </div>
        </div>
      </div>
    </div>
  </div>
 
<% end %>
