<div class="row">
  <div class="col-md-6">
  <div class="col-md-6 col-md-offset-3">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <%= f.hidden_field :role, :value => :user%>
    <h3>User Registration</h3>
    <%= devise_error_messages! %>
    <%=f.association :organisation%>
  
      <%= f.input :name, class: 'form-control' %>


      
      <%= f.input :email, class: 'form-control' %>
   
   
      <%= f.input :password, class: 'form-control' %>

   
      <%= f.input :password_confirmation, class: 'form-control' %>
 

     <%= f.submit 'Register', :class => 'btn btn-success' %>
  <% end %>
  </div>
  </div>

